{
  "dashboard": {
    "id": null,
    "title": "Infrastructure",
    "tags": ["infrastructure", "host"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "%",
            "format": "percent",
            "logBase": 1
          }
        ]
      },
      {
        "id": 2,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "%",
            "format": "percent",
            "logBase": 1
          }
        ]
      },
      {
        "id": 3,
        "title": "Disk Usage",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_free_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100",
            "legendFormat": "Root Disk Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "%",
            "format": "percent",
            "logBase": 1
          }
        ]
      },
      {
        "id": 4,
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total{device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
            "legendFormat": "Receive {{device}}"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total{device!~\"lo|veth.*|docker.*|br.*\"}[5m])",
            "legendFormat": "Transmit {{device}}"
          }
        ],
        "yAxes": [
          {
            "label": "bps",
            "format": "Bps",
            "logBase": 1
          }
        ]
      },
      {
        "id": 5,
        "title": "Load Average",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "Load 1m"
          },
          {
            "expr": "node_load5",
            "legendFormat": "Load 5m"
          },
          {
            "expr": "node_load15",
            "legendFormat": "Load 15m"
          }
        ],
        "yAxes": [
          {
            "label": "Load",
            "format": "short",
            "logBase": 1
          }
        ]
      },
      {
        "id": 6,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "irate(node_disk_read_bytes_total[5m])",
            "legendFormat": "Read {{device}}"
          },
          {
            "expr": "irate(node_disk_written_bytes_total[5m])",
            "legendFormat": "Write {{device}}"
          }
        ],
        "yAxes": [
          {
            "label": "B/s",
            "format": "Bps",
            "logBase": 1
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(node_uname_info, instance)",
          "refresh": 1,
          "options": [],
          "current": {}
        }
      ]
    }
  }
}
